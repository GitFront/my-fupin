/* 页面中部布局 */
$main-margin-top:136px;
$main-margin-left:28px;

#mapWrap{
	position: absolute;
	top: 63px;
	width: 1366px;
	height: 705px;
	display: flex;
	justify-content:center;
	align-items:center;
}
.center-index{
	position: absolute;
	z-index: 1;
	width: 530px;
	height: 60px;
	top: 100px;
	left: 50%;
	margin-left: -300px;
	
	p{
		float: left;
		margin-right: 70px;
		font-size: 36px;
		line-height: 28px;
	
		&:nth-child(2){
			position: relative;
			margin-right: 78px;
		}
		&:nth-child(3){
			margin-right: 0;
		}
		.per{
			font-size: 16px;
			top: 11px;
			right: -40px;
			position: absolute;
		}
		label{
			padding-left: 4px;
			font-size: 16px;
			color:#fff;
		}
	}
}

#countryDangan{
	position: absolute;
	top: 115px;
	left: 11px;
 	width: 189px;
 	height: 41px;
	cursor: pointer;
 	@include bgPng(show-country-dangan);
}


.main-left{
	position: absolute;
	top: 64px;
	left: 0;
	width: 290px;
	height: 650px;
	.rank-wrap{
		width: 290px;
		height: 100%;
		.rank-div{
			font-size: 16px;
			float: left;
			width: 262px;
			padding-top: 110px;
			
			height: 100%;
			background: $ml-rgba-c;
//			box-shadow:10px 0px 10px  $shadow-c;
			.title{
				padding-top: 16px;
				line-height: 34px;
				padding-bottom: 12px;
				text-align: center;
			}
			.rank-ul{
				padding-left: 24px;
				li{
					height: 39px;
					line-height: 39px;
					i{
						margin-left: 14px;
						
						display: inline-block;
						height: 15px;
					}
					.top3{
						width: 60%;
						background: #c43631;
					}
					.top6{
						width: 40%;
						background: #f77434;
					}
					.top10{
						width: 20%;
						background: #f6dc6e;
					}
				}
			}
		}

	}
	



} /* end  main-left */

.main-right{
	position: absolute;
	top: $main-margin-top;
	right: $main-margin-left;
	width: 415px;
	height: 571px;
	&.one-chart{
		height: 316px;
	}
	.inner{
		float: right;
		width: 385px;
		height: 100%;
		background: $mr-rgba-c;
		box-shadow:-10px 0px 12px  $shadow-c;
		.top{
			position: relative;
			font-size: 16px;
			margin-top: 25px;
			line-height: 36px;
			strong{
				padding-left: 18px;
				padding-right: 16px;
			}
			em{
				display: inline-block;
				width: 160px;
				padding-left: 27px;
				height: 36px;
				color: $m-c;
				cursor: pointer;
				@include bgPng(check-index)
			}
			.selector-ul{
				position: absolute;
				left: 118px;
				width: 158px;
				background: $m-c;
			}
		}

		.chart-div{
			width: 100%;
			.echart{
				padding-top: 10px;
				padding-left: 20px;
				height: 280px;
			}
			#echart1.OneChart{
				padding-top: 130px;
				height: 300px;
			}
		}
	}


	.shrink{
		float: right;
	}

}/* end  main-right */
#poorMainRight{
	top: 64px;
	right: 0;
	height: 705px;
	.selector-div{
		width: 290px;
		
		.selector-title.checked{
				@include bgPng(check-index-up);
			}
	}
}
.year-btn-group{
		position: absolute;
		top: 94px;
		left: -5px;
		margin-top: 24px;
		padding-left: 14px;
	}
.map-back-btn{
//	display: none;
	position: absolute;
	height: 32px;
	line-height: 32px;
	padding:0 10px;
	border-radius: 14px;
	top: 175px;
	left: 277px;
	cursor: pointer;
	background: rgba(102,145,249,0.5);
}
	
	.hushu-bar{
		position: absolute;
		bottom: 22px;
		left: 300px;
		padding-left: 18px;
		margin-top: 22px;
		strong{
			color: #fff;
			font-size: 16px;
			padding-right: 10px;
		}
		img{
			vertical-align: 1px;
		}
	}
	
	.map-shrink{
		position: absolute;
		bottom: 10px;
		left: 20px;
		padding-left: 18px;
		margin-top: 18px;
		strong{
			color: #fff;
			font-size: 16px;
			padding-right: 10px;
		}
		i{
			display: inline-block;
			vertical-align: -15px;
			width: 40px;
			height: 41px;
			cursor: pointer;
		}
		.map-bigger{
			@include bgPng(map-add);
			margin-right: 4px;
		}
		.map-smaller{
			@include bgPng(map-sub);
		}
	}


.shrink{
	position: relative;
	float: left;
	width: 28px;
	height: 100%;
	background: $shrink-rgba-c;
	i{
		position: absolute;
		opacity:0.7;
		top: 50%;
		left: 7px;
		margin-top: -10px;
		width: 14px;
		height: 20px;
		cursor: pointer;
		&.arrow-left{
			@include bgPng(arrow-left);
		}
		&.arrow-right{
			@include bgPng(arrow-right);
		}
	}
}