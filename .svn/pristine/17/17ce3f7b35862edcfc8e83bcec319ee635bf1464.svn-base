.tab-switch {
    position: relative;
    padding: 0 14px;
    .overflow-wrap {
        position: relative;
        overflow: hidden;
        width: auto;
    }
    .icon {
        position: absolute;
        z-index: 10;
        top: 50%;
        margin-top: -8px;
        display: inline-block;
        cursor: pointer;
    }
    .icon-arrow-left {
        left: 0;
        width: 0;
        height: 0;
        border-top: 9px solid transparent;
        border-bottom: 9px solid transparent;
        border-right: 12px solid $yellow;
        &.forbid {
            border-right: 12px solid #6e6f83;
        }
    }
    .icon-arrow-right {
        right: 0;
        width: 0;
        height: 0;
        border-top: 9px solid transparent;
        border-bottom: 9px solid transparent;
        border-left: 12px solid $yellow;
        &.forbid {
            border-left: 12px solid #6e6f83;
        }
    }
    .tab-list {
        position: relative;
        left: 0;
        width: auto;
        display: inline-block;
        li {
            padding: 0 14px;
            text-align: center;
            float: left;
            width: auto;
            text-align: center;
            font-size: 18px;
            color: $yellow;
        }
    }
}


/* 相册  示范村*/

.photo-switch {
    $photo-h: 300px;
    box-sizing: border-box;
    position: relative;
    margin-top: 8px;
    padding: 22px;
    width: 100%;
    height: 342px;
    background: #202030;
    .overflow-wrap {
        height: $photo-h;
        position: relative;
        overflow: hidden;
        width: auto;
    }
    .icon {
        position: absolute;
        z-index: 10;
        width: 14px;
        height: 33px;
        top: 50%;
        margin-top: -16px;
        display: inline-block;
        cursor: pointer;
    }
    .icon-arrow-left {
        left: -25px;
        @include bgPng("arrow-left-blue");
        &.forbid {
            @include bgPng("arrow-left-grey");
        }
    }
    .icon-arrow-right {
        right: -25px;
        transform: rotate(180deg);
        @include bgPng("arrow-left-blue");
        &.forbid {
            @include bgPng("arrow-left-grey");
        }
    }
    .tab-list {
        position: relative;
        left: 0;
        height: $photo-h;
        width: auto;
        display: inline-block;
        li {
            cursor: pointer;
            position: relative;
            width: 234px;
            height: $photo-h;
            float: left;
            overflow: hidden;
            background: #000;
            background-size: auto $photo-h;
            background-repeat: no-repeat;
            background-position: center center;
            .tips {
                position: absolute;
                padding-left: 14px;
                height: 38px;
                font-size: 12px;
                line-height: 38px;
                width: 100%;
                color: $light-blue;
                background: rgba(0, 0, 0, .6);
                bottom: 0;
                left: 0;
            }
        }
        li+li {
            margin-left: 18px;
        }
    }
}

.pop-big-img-wrap {
    display: none;
    z-index: 100;
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: - $m-w / 2;
    width: $m-w;
    height: $m-h;
    background: rgba(0, 0, 0, 0.5);
    .big-img-wrap {
        display: block;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: auto;
        height: 605px;
        width: auto;
		
		img{
			height: 100%;
			 width: auto;
		}
        .btn-close {
        	$s: 46px;
        	position: absolute;
        	width: $s;
        	height: $s;
        	cursor: pointer;
        	right: -27px;
        	top: -17px;
        	@include bgPng(file_btn_close);
        	z-index: 80;
        }

        .tips {
                position: absolute;
                padding-left: 21px;
                height: 38px;
                font-size: 14px;
                line-height: 38px;
                width: 100%;
                color: $light-blue;
                background: rgba(0, 0, 0, .6);
                bottom: 0;
                left: 0;
            }
    }
}
