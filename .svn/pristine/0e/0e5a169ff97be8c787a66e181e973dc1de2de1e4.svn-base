@charset "utf-8";
/* CSS Document */


#condEditor div {
		margin-left:3px;
		margin-bottom:3px;
		display:  inline-block;
}
#fieldEditor div {
		margin-left:3px;
		margin-bottom:3px;
		display:  inline-block;
}
.closeRegion{
		position:relative ;
}
.fieldTag{
	height:22px;
	padding:5px;
}

.conditionTag{
	height:22px;
